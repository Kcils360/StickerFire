
@model IEnumerable<StickerFire.Models.Campaign>
@using StickerFire.Models;
@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Published)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Active)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Published)
                            </td>
               
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.Title)">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @*Details Preview*@
            @{ 
                foreach (var item in Model)
                {
                    <div id="@Html.DisplayFor(modelItem => item.Title)" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <img class="preview_Img" src="http://via.placeholder.com/450x300" />
                                    <ul>
                                        <li>Title: @Html.DisplayFor(modelItem => item.Title)</li>
                                        <li>Category: @Html.DisplayFor(modelItem => item.Category)</li>
                                        <li>Votes: @Html.DisplayFor(modelItem => item.Votes)</li>
                                        <li>Views: @Html.DisplayFor(modelItem => item.Views)</li>
                                        <li>Active: @Html.DisplayFor(modelItem => item.Active)</li>
                                        <li>Published: @Html.DisplayFor(modelItem => item.Published)</li>
                                        <li>Description: @Html.DisplayFor(modelItem => item.Description)</li>
                                        <li>Status: @Html.DisplayFor(modelItem => item.Status)</li>
                                        <li>Deny Message: @Html.DisplayFor(modelItem => item.DenyMessage)</li>
                                        <li>Img Path: @Html.DisplayFor(modelItem => item.ImgPath)</li>
                                        <li>Owner ID: @Html.DisplayFor(modelItem => item.OwnerID)</li>
                                        <li>Campain ID: @Html.DisplayFor(modelItem => item.ID)</li>
                                    </ul>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>

                    </div>
                }
            }
        </div>
    </div>
</div>