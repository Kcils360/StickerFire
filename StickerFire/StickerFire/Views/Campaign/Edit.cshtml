<div class="container">
    <h4>Campaign</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DenyMessage" class="control-label"></label>
                    <input asp-for="DenyMessage" row="4"class="form-control" />
                    <span asp-validation-for="DenyMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Published" class="control-label"></label>
                    <input asp-for="Published"  type="checkbox" class="form-control" />
                    <span asp-validation-for="Published" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Active"></label>
                    <input asp-for="Active" type="checkbox" class="form-control" />
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status">Status:</label>
                    <select asp-for="Status" class="form-control" id="sel1">
                        @{
                            var allValues = (Status[])Enum.GetValues(typeof(Status));
                            foreach (var item in allValues)
                            {
                                <option>@item</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                
              
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AdminIndex">Back to List</a>
    </div>
</div>
