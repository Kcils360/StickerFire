@model IEnumerable<StickerFire.Models.Campaign>
@using StickerFire.Models;
@{ 
    Layout = "_Layout";
}

<h1>This is the Campaign index page</h1>

<p>
    <a asp-action="Create">Create new campaign </a>
</p>
<div class="container">
    <div class="row">
        @{ 
            foreach(var item in Model)
            {  
                <div class="col-sm-1 col-lg-2">
                    <img src="http://via.placeholder.com/140x150"/>
                    <h1>@Html.DisplayFor(modelItem => item.Title)</h1>                     
                    <p>Votes:@Html.DisplayFor(modelItem => item.Votes) | Views:@Html.DisplayFor(modelItem => item.Views)</p>                   
                    @*<p>@Html.DisplayFor(modelItem => item.Description)</p>*@
                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.Title)">Preview</button>

                <div id="@Html.DisplayFor(modelItem => item.Title)" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h1>@Html.DisplayFor(modelItem => item.Title)</h1>
                            </div>
                            <div class="modal-body">
                                <img src="http://via.placeholder.com/450x300"/>
                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                <p>Votes:@Html.DisplayFor(modelItem => item.Votes) | Views:@Html.DisplayFor(modelItem => item.Views)</p>   
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>

                </div>
                </div>

         
            }
        }
    </div>
</div>
