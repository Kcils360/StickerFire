@*@model StickerFire.Models.*@

<h2>Make a New Sticker Campaign</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*Name of the campain*@
            <label asp-for="Name" class="control-label">Campaign Name</label>
            <div class="form-group">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                @*select list for category*@
                <label asp-for="Category" class="control-label">Select Category</label>
                <div>
                    <select asp-for="CampaignCategory" asp-items="Model.category">
                        <option value="">Select All</option>
                    </select>

                    <input type="submit" value="Select" />
                </div>
            </div>

                @*Description of the campain*@
            <label asp-for="Description" class="control-label">Campaign Description</label>
            <div class="form-group">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </form>
        @*form for upload file*@
        <form method="post" runat="server" enctype="multipart/form-data">
            <input type="file" runat="server" />

        </form>
    </div>
</div>
