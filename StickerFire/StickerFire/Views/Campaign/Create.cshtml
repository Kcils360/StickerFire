@model StickerFire.Models.Campaign
@using StickerFire.Data;
@using StickerFire.Models;

@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Make a New Sticker Campaign</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*Name of the campain*@
                <label asp-for="Title" class="control-label">Campaign Name</label>
                <div class="form-group">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
               
                <div>
                    <label asp-for="Category" class="control-label">Select Category</label>
                    <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                @*Description of the campain*@
                <label asp-for="Description" class="control-label">Campaign Description</label>
                <div class="form-group">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            @*form for upload file*@
                    <div class="form-group">
                        <div class="col-md-10">
                            <p>Upload one or more files using this form:</p>
                            <input asp-for="ImgPath" type="file" name="ImgPath" />
                        </div>
                    </div>
                    @*<div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Upload" />
                        </div>
                    </div>*@

               @* form submit button *@
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>
